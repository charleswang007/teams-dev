{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.13/MicrosoftTeams.schema.json",
    "manifestVersion": "1.13",
    "version": "1.0.0",
    "id": "{{state.fx-resource-appstudio.teamsAppId}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Charles Wang",
        "websiteUrl": "{{state.fx-resource-frontend-hosting.endpoint}}",
        "privacyUrl": "{{state.fx-resource-frontend-hosting.endpoint}}{{state.fx-resource-frontend-hosting.indexPath}}/privacy",
        "termsOfUseUrl": "{{state.fx-resource-frontend-hosting.endpoint}}{{state.fx-resource-frontend-hosting.indexPath}}/termsofuse"
    },
    "icons": {
        "color": "resources/unity.png",
        "outline": "resources/unity-outline.png"
    },
    "name": {
        "short": "{{config.manifest.appName.short}}",
        "full": "{{config.manifest.appName.full}}"
    },
    "description": {
        "short": "{{config.manifest.appName.full}}",
        "full": "Project {{config.manifest.appName.short}} - Dev Mode"
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [],
    "configurableTabs": [
        {
            "configurationUrl": "{{state.fx-resource-frontend-hosting.endpoint}}{{state.fx-resource-frontend-hosting.indexPath}}/config",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
            ]
        }
    ],
    "staticTabs": [
        {
            "entityId": "index",
            "name": "My Games",
            "contentUrl": "https://charleswang.us/games/index.html",
            "websiteUrl": "https://charleswang.us/games/index.html",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "test0",
            "name": "憤努鳥紫禁城之戰",
            "contentUrl": "https://charleswang.us/bird/index.html",
            "websiteUrl": "https://charleswang.us/bird/index.html",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "test1",
            "name": "海賊王の射擊對決",
            "contentUrl": "https://charleswang.us/animation/site/onepiece.html",
            "websiteUrl": "https://charleswang.us/animation/site/onepiece.html",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "test2",
            "name": "會動的蘭亭集序",
            "contentUrl": "https://charleswang.us/p5-calligraphy",
            "websiteUrl": "https://charleswang.us/p5-calligraphy",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "test3",
            "name": "我在大海裡競逐",
            "contentUrl": "https://charleswang.us/unity-ocean",
            "websiteUrl": "https://charleswang.us/unity-ocean",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "test4",
            "name": "奇幻動物王國",
            "contentUrl": "https://charleswang.us/unity-animal",
            "websiteUrl": "https://charleswang.us/unity-animal",
            "scopes": [
                "personal"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "{{state.fx-resource-frontend-hosting.domain}}"
    ]
}